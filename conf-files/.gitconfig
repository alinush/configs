[user]
    name = Alin Tomescu
	email = tomescu.alin@gmail.com
[diff]
    color = true
[alias]
    st = status
    tagcommit = rev-list -n 1
    logshort = log --decorate --pretty=oneline
    loglong = log --graph --stat --decorate=short
    sdiff = ! git diff && git submodule foreach 'git diff'
    spush = push --recurse-submodules=on-demand
    supdate = submodule update --remote --merge
	uncommit = reset HEAD^
[push]
    default = simple
[color]
    status = auto
    branch = auto
    ui = auto
[color "diff"]
    plain = normal
    meta = yellow
    frag = magenta ul
    old = red bold
    new = green
    whitespace = red reverse
    func = magenta bold
[color "status"]
    branch = yellow ul
    added = yellow
    changed = green
    untracked = cyan
    header = normal
    nobranch = red
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
    plain = normal
[pack]
    threads = 2
[core]
    editor = vim
[url "https://github"]
	insteadOf = git://github
[url "git@github.com:"]
	insteadOf = https://github.com/
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
